{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Resume Files",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "find . -name \"vladimir_sirghi_resume*\" ! -name \"vladimir_sirghi_resume.tex\" -exec rm -f {} + > /dev/null 2>&1"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build LaTeX Project",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "latexmk -pdf vladimir_sirghi_resume.tex > /dev/null 2>&1"
            ],
            "problemMatcher": [
                {
                    "owner": "latex",
                    "fileLocation": "relative",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+):(\\d+): (.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ]
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}